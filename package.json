		"@ai-sdk/mistral": "^1.1.0",
		"@biomejs/biome": "^2.3.11",
		"@hono/zod-validator": "^0.1.11",
		"ai": "^4.0.22",
		"hono": "^4.0.0",
		"postgres": "^3.4.4",
		"typescript": "^5.8.3",
		"zod": "^3.22.4"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
