	"type": "module",
	"scripts": {
		"lint": "bun run --cwd apps/api lint && bun run --cwd apps/vector lint",
		"format": "bun run --cwd apps/api format && bun run --cwd apps/vector format",
		"api:lint": "bun run --cwd apps/api lint",
		"api:start": "bun run --cwd apps/api start",
		"api:test": "bun run --cwd apps/api test",
		"vector:lint": "bun run --cwd apps/vector lint",
		"vector:start": "bun run --cwd apps/vector start",
		"vector:test": "bun run --cwd apps/vector test"
	},
	"devDependencies": {
		"@types/bun": "^1.1.5",
		"@types/node": "^20.12.14",
		"bun-types": "latest"
	},
