{
	"name": "privacy-ai",
	"license": "ISC",
	"type": "module",
	"scripts": {
		"api:format": "bun run --cwd apps/api format",
		"api:lint": "bun run --cwd apps/api lint",
		"api:start": "bun run --cwd apps/api start",
		"api:test": "bun run --cwd apps/api test",
		"lint:all": "biome lint --error-on-warnings .",
		"format:all": "biome format . --write",
		"test:all": "bun test",
		"type-check:all": "bun run --filter '*' type-check",
		"prepare": "husky"
	},
	"devDependencies": {
		"@types/bun": "^1.1.5",
		"@types/node": "^20.12.14",
		"bun-types": "latest",
		"husky": "^9.1.7"
	},
	"dependencies": {
		"@ai-sdk/mistral": "^1.1.0",
		"@biomejs/biome": "^2.3.11",
		"@hono/zod-validator": "^0.1.11",
		"ai": "^4.0.22",
		"hono": "^4.0.0",
		"postgres": "^3.4.4",
		"typescript": "^5.8.3",
		"zod": "^3.22.4"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
